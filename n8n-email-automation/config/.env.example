# ==========================================
# N8N EMAIL AUTOMATION CONFIGURATION
# ==========================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file with real credentials to version control

# ==========================================
# GOOGLE SHEETS CONFIGURATION
# ==========================================
# Your Google Sheet ID (found in the URL of your Google Sheet)
# Example: https://docs.google.com/spreadsheets/d/1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms/edit
# The ID would be: 1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Name of the worksheet/tab containing your contacts (default: "Contacts")
WORKSHEET_NAME=Contacts

# ==========================================
# EMAIL SENDER CONFIGURATION
# ==========================================
# Your name as it appears in emails
SENDER_NAME=Your Full Name

# Your email address (must match your Gmail OAuth2 credentials)
SENDER_EMAIL=your-email@gmail.com

# Your professional title/role
SENDER_TITLE=Business Development Manager

# Reply-to email (can be different from sender email)
REPLY_TO_EMAIL=your-email@gmail.com

# Phone number for contact information (optional)
SENDER_PHONE=+1-555-123-4567

# Admin email for notifications and alerts
ADMIN_EMAIL=admin@yourcompany.com

# ==========================================
# COMPANY INFORMATION
# ==========================================
# Your company name
COMPANY_NAME=Your Company Name

# Physical address for CAN-SPAM compliance
COMPANY_ADDRESS=123 Main Street, Suite 100, City, State 12345, Country

# Company website URL
COMPANY_WEBSITE=https://www.yourcompany.com

# Support email address
SUPPORT_EMAIL=support@yourcompany.com

# ==========================================
# RATE LIMITING & PERFORMANCE
# ==========================================
# Number of emails to send in each batch (recommended: 5-20)
# Lower numbers = slower but safer, higher numbers = faster but more risk
BATCH_SIZE=10

# Delay between batches in minutes (recommended: 1-5)
# Helps avoid hitting Gmail API rate limits
BATCH_DELAY_MINUTES=2

# Maximum emails to send per day (Gmail limits: 500 for free, 2000 for Workspace)
# Set this lower than your actual limit to be safe
DAILY_LIMIT=450

# Maximum retries for failed email sends
MAX_RETRIES=3

# Retry delay in minutes
RETRY_DELAY_MINUTES=5

# ==========================================
# COMPLIANCE & LEGAL
# ==========================================
# URL for unsubscribe page (required for CAN-SPAM compliance)
UNSUBSCRIBE_URL=https://yourcompany.com/unsubscribe

# Privacy policy URL
PRIVACY_POLICY_URL=https://yourcompany.com/privacy

# Terms of service URL
TERMS_OF_SERVICE_URL=https://yourcompany.com/terms

# ==========================================
# EMAIL TRACKING (OPTIONAL)
# ==========================================
# Enable email tracking (true/false)
TRACKING_ENABLED=false

# Tracking pixel URL (if using email analytics service)
TRACKING_URL=https://analytics.yourcompany.com/track

# Google Analytics tracking ID (optional)
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ==========================================
# WEBHOOK & API CONFIGURATION
# ==========================================
# Webhook URL for external integrations (optional)
WEBHOOK_URL=https://yourapp.com/webhook/email-status

# API key for webhook authentication (optional)
WEBHOOK_API_KEY=your_webhook_api_key

# ==========================================
# NOTIFICATION SETTINGS
# ==========================================
# Slack webhook URL for notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX

# Discord webhook URL for notifications (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/123456789/abcdefghijklmnopqrstuvwxyz

# ==========================================
# CALENDAR INTEGRATION
# ==========================================
# Calendly URL for booking meetings
CALENDLY_URL=https://calendly.com/your-username

# Cal.com URL alternative
CAL_COM_URL=https://cal.com/your-username

# ==========================================
# SECURITY SETTINGS
# ==========================================
# JWT secret for secure token generation (optional)
JWT_SECRET=your_super_secret_jwt_key_here

# Encryption key for sensitive data (optional)
ENCRYPTION_KEY=your_32_character_encryption_key

# ==========================================
# DEVELOPMENT & DEBUGGING
# ==========================================
# Environment (development/staging/production)
NODE_ENV=production

# Enable debug logging (true/false)
DEBUG_MODE=false

# Log level (error/warn/info/debug)
LOG_LEVEL=info

# ==========================================
# CUSTOM FIELDS MAPPING
# ==========================================
# Define what your custom fields represent
CUSTOM_FIELD_1_NAME=Tier
CUSTOM_FIELD_2_NAME=Industry
CUSTOM_FIELD_3_NAME=Company Size
CUSTOM_FIELD_4_NAME=Lead Source

# ==========================================
# EMAIL TEMPLATE SETTINGS
# ==========================================
# Default email template to use
DEFAULT_TEMPLATE=basic-template

# Template directory path (relative to project root)
TEMPLATE_PATH=templates

# ==========================================
# INTEGRATION SETTINGS
# ==========================================
# CRM integration (optional)
CRM_API_URL=https://api.yourcrm.com/v1
CRM_API_KEY=your_crm_api_key

# Marketing automation platform (optional)
MAP_API_URL=https://api.yourmarketingplatform.com/v2
MAP_API_KEY=your_map_api_key

# ==========================================
# BACKUP & RECOVERY
# ==========================================
# Backup webhook URL for data redundancy (optional)
BACKUP_WEBHOOK_URL=https://backup.yourservice.com/webhook

# Database backup frequency in hours (optional)
BACKUP_FREQUENCY_HOURS=24

# ==========================================
# COMPLIANCE MONITORING
# ==========================================
# Bounce handling webhook (optional)
BOUNCE_WEBHOOK_URL=https://yourapp.com/webhook/bounce

# Spam complaint webhook (optional)
SPAM_WEBHOOK_URL=https://yourapp.com/webhook/spam

# ==========================================
# LOCALIZATION
# ==========================================
# Default language/locale
DEFAULT_LOCALE=en-US

# Timezone for scheduling and timestamps
TIMEZONE=America/New_York

# Date format for emails
DATE_FORMAT=MMMM Do, YYYY

# ==========================================
# PERFORMANCE MONITORING
# ==========================================
# Application monitoring service URL (optional)
MONITORING_URL=https://monitoring.yourservice.com/webhook

# Performance metrics webhook (optional)
METRICS_WEBHOOK_URL=https://metrics.yourservice.com/ingest

# ==========================================
# NOTES
# ==========================================
# - Always test with a small batch first
# - Monitor your Gmail sending limits
# - Keep your contact list clean and updated
# - Follow CAN-SPAM and GDPR regulations
# - Regularly backup your Google Sheets data
# - Use strong passwords for all accounts
# - Enable 2FA on all connected services
